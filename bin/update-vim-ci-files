#!/bin/bash

commit_file()
{
  local file="$1"
  local message="$2"

  if [ -f "$file" ]
  then
    verb='Update'
  else
    verb='Add'
  fi

  cat >"$file"
  git add "$file"
  git commit -m "$verb a $file $message" "$file"
}

commit_file Gemfile 'for development dependencies' <<'END'
source 'https://rubygems.org'

gem 'vim-flavor', '~> 3.0'
END

commit_file Rakefile 'for routine works' <<'END'
#!/usr/bin/env rake

task :ci => [:dump, :test]

task :dump do
  sh 'vim --version'
end

task :test do
  sh 'bundle exec vim-flavor test'
end
END

commit_file Flavorfile 'for runtime dependencies' <<'END'
# No dependencies.
END

commit_file .travis.yml 'to use vim-flavor on Travis CI' <<'END'
language: vim
cache:
directories:
  - $HOME/.rvm
  - $HOME/.vvm
before_install:
- curl https://raw.githubusercontent.com/kana/vim-version-manager/master/bin/vvm | python - setup; true
- source ~/.vvm/etc/login
- vvm update_itself
- vvm use vimorg--v8.0.1529 --install --with-features=huge
-
- rvm use 2.5.0 --install --binary --fuzzy
script: rake ci
END

commit_file .gitignore 'for intermediate stuffs' <<'END'
.vim-flavor
Gemfile.lock
Flavorfile.lock
END
